<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserListActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorKNU"
        android:elevation="10dp"
        android:minHeight="?attr/actionBarSize">
        <RelativeLayout
            android:id="@+id/toolbar_title_img"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_list_mode"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_alignParentStart="true"
                android:layout_height="25dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="" />
            <TextView
                android:id="@+id/cancel"
                android:layout_toLeftOf="@id/complete"
                android:layout_marginEnd="15dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="취소" />

            <TextView
                android:id="@+id/complete"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:text="완료"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner"
                android:layout_weight="3"
                android:layout_width="140dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/searchText"
                android:layout_weight="8"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:hint="사용자 이름 검색"/>

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:padding="0sp"
                android:scaleType="centerCrop"
                android:src="@drawable/clear_button" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="8"
            android:id="@+id/recyclerUserList"
            android:layout_gravity="center_vertical"
            android:layout_above="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundUserList" />
    </LinearLayout>

</LinearLayout>
