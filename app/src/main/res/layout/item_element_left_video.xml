<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">
        <!--        <ImageView-->
        <!--            xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--            android:layout_width="35dp"-->
        <!--            android:layout_height="35dp"-->
        <!--            android:layout_gravity="top"-->
        <!--            android:src="@drawable/knu_mark"-->
        <!--            android:id="@+id/imgv"-->
        <!--            app:civ_border_color="#FF000000"-->
        <!--            app:civ_border_width="1dp"></ImageView>-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgv"
            android:layout_width="28dp"
            android:layout_height="35dp"
            android:layout_gravity="top"
            android:layout_marginTop="7dp"
            android:src="@drawable/knu_mark" />
        <!-- app:civ_border_color="#da2127"
         app:civ_border_width="1dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textv_nicname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="닉네임"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imagev_msg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerInside"
                    android:maxLength="150"
                    android:maxLines="15"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/textv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textSize="13sp"
                    android:text="12:30" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/readnum"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:text=""
                    android:textColor="@color/colorKNU"
                    android:textSize="15sp"></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
